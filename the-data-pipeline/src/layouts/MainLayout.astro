---
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  lang?: string;
}

const { title, lang = "en" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #0f1419;
    --color-bg-secondary: #1a1f2e;
    --color-text: #e6e6e6;
    --color-text-secondary: #a8a8b3;
    --color-accent: #3b82f6;
    --color-accent-hover: #2563eb;
    --spacing: 1rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  a {
    color: #a9a9a9;
    text-decoration: underline;
  }

  a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  ul,
  ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1rem;
  }
</style>
