---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import { content } from '../content/en';
---

<MainLayout title={content.pipeline.title} lang="en">
  <Navigation />
  
  <main>
    <div class="container">
      <h1>{content.pipeline.title}</h1>
      
      <div class="content-section">
        {content.pipeline.intro.split('\n\n').map((paragraph: string) => (
          <p set:html={paragraph.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
        ))}
      </div>

      <div class="schema-placeholder">
        <h3>TODO schema (placeholder):</h3>
        <ul>
          <li>Source systems</li>
          <li>Ingestion conduit</li>
          <li>DWH bronze layer</li>
          <li>Transformation processing plants & conduits from bronze to silver and from silver to gold</li>
          <li>DWH silver & gold layers</li>
          <li>Analysis processing plants & conduits from gold to end users</li>
          <li>Data science processing plants & conduits from gold to end users</li>
        </ul>
      </div>

      <div class="nav-buttons">
        <a href={`${import.meta.env.BASE_URL}${import.meta.env.BASE_URL.endsWith('/') ? '' : '/'}introduction`} class="prev-button">← Previous: {content.intro.title}</a>
        <a href={`${import.meta.env.BASE_URL}${import.meta.env.BASE_URL.endsWith('/') ? '' : '/'}data-engineers`} class="next-button">Next: {content.engineers.title} →</a>
      </div>
    </div>
  </main>
</MainLayout>

<style>
  main {
    padding: 3rem 2rem;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-accent);
  }

  .content-section {
    margin-bottom: 2rem;
  }

  .schema-placeholder {
    background: var(--color-bg-secondary);
    border: 2px dashed rgba(59, 130, 246, 0.3);
    border-radius: 0.5rem;
    padding: 2rem;
    margin: 2rem 0;
  }

  .schema-placeholder h3 {
    color: var(--color-text-secondary);
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .schema-placeholder ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .schema-placeholder li {
    color: var(--color-text-secondary);
    padding: 0.5rem 0;
    font-style: italic;
  }

  .nav-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .prev-button,
  .next-button {
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: white;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s;
    text-decoration: none;
  }

  .prev-button:hover {
    background: var(--color-accent-hover);
    transform: translateX(-5px);
    text-decoration: none;
  }

  .next-button:hover {
    background: var(--color-accent-hover);
    transform: translateX(5px);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .nav-buttons {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
