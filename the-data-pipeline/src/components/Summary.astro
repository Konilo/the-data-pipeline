---
interface Props {
  role: string;
  tools: string;
}

const { role, tools } = Astro.props;
---

<div class="summary-box">
  <h3>Summary</h3>
  <p><strong>Role:</strong> {role}</p>
  <p><strong>Main tool:</strong> {tools}</p>
</div>

<style>
  .summary-box {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid var(--color-accent);
    margin-bottom: 2rem;
  }

  .summary-box h3 {
    margin-top: 0;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .summary-box p {
    margin-bottom: 0.5rem;
  }

  .summary-box p:last-child {
    margin-bottom: 0;
  }
</style>
